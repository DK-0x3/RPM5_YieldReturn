<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RPM5_YieldReturn.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="RPM5_YieldReturn"
        Background="#1A1A1D">

    <StackPanel Margin="200,50,200,50">
        <TextBox x:Name="StartValueInput" Watermark="Начальное значение" Margin="0,5"/>
        <TextBox x:Name="EndValueInput" Watermark="Конечное значение" Margin="0,5"/>
        
        <Button x:Name="GeneratedButton" HorizontalAlignment="Center" Background="#1F1F22" Content="Генерировать" Click="OnGenerateNumbersClicked" Margin="0,10"/>
        
        <ProgressBar x:Name="ProgressBar" Foreground="#950740" Height="20" Minimum="0" Maximum="100" Margin="0,10" />
        
        <ListBox x:Name="NumberListBox" Height="400" CornerRadius="15" Background="#1F1F22" Margin="0,10"/>
        
        <TextBlock x:Name="CompletionMessage" FontSize="16" Margin="0,10" />
    </StackPanel>

</Window>
